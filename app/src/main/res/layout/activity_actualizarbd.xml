<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actualizarbdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/pedidos_" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="ACTUALIZAR PEDIDOS"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBusqueda"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Datos de busqueda"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto" />

            <EditText
                android:id="@+id/editTextprodUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de entrega" />

            <EditText
                android:id="@+id/editTextFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <Button
                android:id="@+id/buttonBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar Pedido" />

            <TextView
                android:id="@+id/textViewActalizable"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Datos para actualizar"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto" />

            <EditText
                android:id="@+id/editTextprodUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad" />

            <EditText
                android:id="@+id/editTextcantUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de entrega" />

            <EditText
                android:id="@+id/editTextFechaEntregaUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="datetime" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metodo de entrega" />

            <RadioGroup
                android:id="@+id/RadioGroupUpdate"
                android:layout_width="match_parent"
                android:layout_height="102dp">

                <RadioButton
                    android:id="@+id/radioButtonDomicilioUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrega a domicilio" />

                <RadioButton
                    android:id="@+id/radioButtonTiendaUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recoger de la tienda" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion de entrega" />

            <EditText
                android:id="@+id/editTextDirEntregaUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />


            <Button
                android:id="@+id/buttonactualizar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar pedido" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>