<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eliminarbdActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/pedidos_" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="ELIMINAR PEDIDOS"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto" />

            <EditText
                android:id="@+id/editTextprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de entrega" />

            <EditText
                android:id="@+id/editTextFecha1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <Button
                android:id="@+id/buttonactualizar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar el pedido" />

            <Button
                android:id="@+id/buttoneliminar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar todos los pedidos" />

            <Button
                android:id="@+id/buttonmostrar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar pedidos" />

            <TextView
                android:id="@+id/textViewMostrarPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>